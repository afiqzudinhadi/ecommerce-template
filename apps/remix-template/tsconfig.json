{
	"include": ["**/*.ts", "**/*.tsx"],
	"extends": "@repo/typescript-config/remix.json",
	"compilerOptions": {
		"types": ["@vercel/remix", "vite/client"],
		"module": "ESNext",
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./app/*"]
		},

		// Vite takes care of building everything, not tsc.
		"noEmit": true
	}
}
